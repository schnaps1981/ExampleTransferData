<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_light"
    tools:context=".Fragment1">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        
        <TextView
            android:id="@+id/tv_fragment1_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textStyle="bold"
            android:text="Fragment 1"/>

        <TextView
            android:id="@+id/tv_fragment1_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_fragment1_title"
            android:textSize="10sp"
            android:text="@string/hello_blank_fragment" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fragment1_to_activity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_below="@+id/tv_fragment1_data"
            android:layout_marginTop="8dp"
            android:text="send to activity" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_fragment1_to_fragment2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/btn_fragment1_to_activity"
            android:layout_toRightOf="@id/btn_fragment1_to_activity"
            android:text="send to fragment 2"
            android:textSize="10sp" />
    </RelativeLayout>

</FrameLayout>